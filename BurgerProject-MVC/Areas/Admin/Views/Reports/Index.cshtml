@model (decimal today , decimal week , decimal month , decimal total )

<div class="container">
    <div class="text-center">
        <h1 class="text-danger">Shop Revenues</h1>
        <hr />
        <div class="fs-3">
            Total Earned: $@Model.total
        </div>
        <div class="fs-3">
            Today Earned: $@Model.today
        </div >
        <div class="fs-3">
            Weekly Earned: $@Model.week
        </div>
        <div class="fs-3">
            Monthly Earned: $@Model.month
        </div>
    </div>
    <hr />
    <h1 class="text-center mb-4 text-danger">Total Sales</h1>

    <div class="text-center ">
        <a class="btn btn-primary w-25" onclick="GetProductSaleReport()">Prodcuts</a>
        <a class="btn btn-primary w-25" onclick="GetMenuSaleReport()">Menus</a>
    </div>

    <div id="totalNumberOfSales"></div>
    <div id="totalNumberOfSales2"></div>


</div>
